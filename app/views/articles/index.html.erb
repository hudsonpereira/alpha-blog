<h1>All articles</h1>

<div class="my-5">
  <%= link_to "Create new article", new_article_path, class: "btn btn-info text-white" %>
</div>


<% @articles.each do |article| %>
  <div class="card my-2">
    <div class="card-body">
        <h1 class="card-title"><%= article.title %></h1>
        <div class="card-subtitle text-muted">Created by <%= article.user.username %> <%= time_ago_in_words(article.created_at) %></div>
        <p><%= article.description %></p>
    </div>

    <div class="card-footer text-right">
      <%= link_to 'Show', article_path(article), class: "btn btn-primary text-white" %>
      <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-white" %>
    </div>
  </div>
<% end %>
